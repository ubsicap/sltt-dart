{
    // Dart-specific formatting settings
    "dart.lineLength": 80,
    "dart.showTodos": true,
    "[dart]": {
        "editor.rulers": [80, 120],
        "editor.hover.enabled": true,
        "editor.hover.delay": 300,
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 120,
        "editor.formatOnSave": true /* Enable if dart save and run extension is not used */,
        "editor.formatOnType": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        }
    },

    // Dart extension settings
    "dart.runPubGetOnPubspecChanges": "prompt",
    "dart.automaticCommentSlashes": "tripleSlash",
    "dart.documentation": "full",

    // General editor settings
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 120,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    // Save and Run extension - runs dart format on save
    "saveAndRun": {
        "commands": [
            {
                "match": "\\.dart$",
                "cmd": "dart format --line-length=80 ${file}",
                "silent": true
            }
        ]
    },
    "terminal.integrated.env.linux": {
        "LD_LIBRARY_PATH": "/tmp/dart_test_libs",
    },
    "cSpell.words": [
        "Syncable"
    ],
    "editor.codeActionsOnSave": {
    },
}

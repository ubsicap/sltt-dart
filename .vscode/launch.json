    "version": "0.2.0",
    "configurations": [
        {
            "name": "Sync Manager Server Runner - Start All",
            "type": "dart",
            "request": "launch",
            "program": "server_runner.dart",
            "console": "terminal",
            "cwd": "${workspaceFolder}",
            "args": ["start-all"]
        },
        {
            "name": "Sync Manager Server Runner - Status",
            "type": "dart",
            "request": "launch",
            "program": "server_runner.dart",
            "console": "terminal",
            "cwd": "${workspaceFolder}",
            "args": ["status"]
        },
        {
            "name": "Sync Manager Server Runner - Sync",
            "type": "dart",
            "request": "launch",
            "program": "server_runner.dart",
            "console": "terminal",
            "cwd": "${workspaceFolder}",
            "args": ["sync"]
        },
        {
            "name": "Debug AWS Backend (Dev)",
            "type": "dart",
            "request": "launch",
            "program": "packages/aws_backend/bin/debug_server.dart",
            "args": [
                "--aws-profile", "sltt-dart-dev",
                "--stage", "dev",
                "--port", "8080"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "AWS_PROFILE": "sltt-dart-dev",
                "AWS_ACCESS_KEY_ID":  "${input:awsAccessKeyId}",
                "AWS_SECRET_ACCESS_KEY": "${input:awsSecretAccessKey}",
                "AWS_REGION": "us-east-1",
                "DYNAMODB_REGION": "us-east-1",
                "DYNAMODB_TABLE": "sltt-backend-changes-dev",
                "STAGE": "dev",
                "USE_CLOUD_STORAGE": "true",
                "LOCAL_DEBUGGER": "true"
            },
            "console": "terminal"
        },
        {
            "name": "Attach: Debug AWS Backend (Dev)",
            "type": "dart",
            "request": "attach",
            "cwd": "${workspaceFolder}",
        },
    ],
    "inputs": [
        {
            "id": "awsProfile",
            "description": "AWS Profile",
            "default": "sltt-dart-dev",
            "type": "promptString"
        },
        {
            "id": "stage",
            "description": "Deployment Stage",
            "default": "dev",
            "type": "pickString",
            "options": [
                "dev",
                "prod"
            ]
        },
        {
            "id": "port",
            "description": "Local Server Port",
            "default": "8080",
            "type": "promptString"
        },
        {
            "id": "awsAccessKeyId",
            "description": "AWS Access Key ID",
            "type": "promptString"
        },
        {
            "id": "awsSecretAccessKey",
            "description": "AWS Secret Access Key",
            "type": "promptString"
        }
    ]
}

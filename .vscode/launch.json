    "version": "0.2.0",
    "configurations": [
        {
            "name": "Demo: Interactive Sync System",
            "type": "dart",
            "request": "launch",
            "program": "examples/sync_manager_demo/demo_sync_system.dart",
            "console": "terminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Demo: Server Runner - Start All",
            "type": "dart",
            "request": "launch",
            "program": "examples/sync_manager_demo/server_runner.dart",
            "console": "terminal",
            "cwd": "${workspaceFolder}",
            "args": ["start-all"]
        },
        {
            "name": "Demo: Server Runner - Status",
            "type": "dart",
            "request": "launch",
            "program": "examples/sync_manager_demo/server_runner.dart",
            "console": "terminal",
            "cwd": "${workspaceFolder}",
            "args": ["status"]
        },
        {
            "name": "Demo: Server Runner - Sync",
            "type": "dart",
            "request": "launch",
            "program": "examples/sync_manager_demo/server_runner.dart",
            "console": "terminal",
            "cwd": "${workspaceFolder}",
            "args": ["sync"]
        },
        {
            "name": "Test: Sync Manager",
            "type": "dart",
            "request": "launch",
            "program": "examples/sync_manager_demo/test_sync_manager.dart",
            "console": "terminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Test: Operation Field",
            "type": "dart",
            "request": "launch",
            "program": "examples/sync_manager_demo/test_operation_field.dart",
            "console": "terminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Server: Downsyncs (8081)",
            "type": "dart",
            "request": "launch",
            "program": "examples/sync_manager_demo/server.dart",
            "console": "terminal",
            "cwd": "${workspaceFolder}",
            "args": ["downsyncs"]
        },
        {
            "name": "Server: Outsyncs (8082)",
            "type": "dart",
            "request": "launch",
            "program": "examples/sync_manager_demo/server.dart",
            "console": "terminal",
            "cwd": "${workspaceFolder}",
            "args": ["outsyncs"]
        },
        {
            "name": "Server: Cloud Storage (8083)",
            "type": "dart",
            "request": "launch",
            "program": "examples/sync_manager_demo/server.dart",
            "console": "terminal",
            "cwd": "${workspaceFolder}",
            "args": ["cloud"]
        },
                {
            "name": "Server: all",
            "type": "dart",
            "request": "launch",
            "program": "examples/sync_manager_demo/server.dart",
            "console": "terminal",
            "cwd": "${workspaceFolder}",
            "args": []
        },
        {
            "name": "Debug AWS Backend (Dev)",
            "type": "dart",
            "request": "launch",
            "program": "packages/aws_backend/bin/debug_server.dart",
            "args": [
                "--aws-profile",
                "sltt-dart-dev",
                "--stage",
                "dev",
                "--port",
                "8080"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "AWS_PROFILE": "sltt-dart-dev"
            },
            "console": "terminal",
            "toolArgs": [
                "--enable-vm-service"
            ]
        },
        {
            "name": "Debug AWS Backend (Production)",
            "type": "dart",
            "request": "launch",
            "program": "packages/aws_backend/bin/debug_server.dart",
            "args": [
                "--aws-profile",
                "sltt-dart-prd",
                "--stage",
                "prod",
                "--port",
                "8080"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "AWS_PROFILE": "sltt-dart-prd"
            },
            "console": "terminal",
            "toolArgs": [
                "--enable-vm-service"
            ]
        },
        {
            "name": "Debug AWS Backend (Custom)",
            "type": "dart",
            "request": "launch",
            "program": "packages/aws_backend/bin/debug_server.dart",
            "args": [
                "--aws-profile",
                "${input:awsProfile}",
                "--stage",
                "${input:stage}",
                "--port",
                "${input:port}"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "AWS_PROFILE": "${input:awsProfile}"
            },
            "console": "terminal",
            "toolArgs": [
                "--enable-vm-service"
            ]
        }
    ],
    "inputs": [
        {
            "id": "awsProfile",
            "description": "AWS Profile",
            "default": "sltt-dart-dev",
            "type": "promptString"
        },
        {
            "id": "stage",
            "description": "Deployment Stage",
            "default": "dev",
            "type": "pickString",
            "options": [
                "dev",
                "prod"
            ]
        },
        {
            "id": "port",
            "description": "Local Server Port",
            "default": "8080",
            "type": "promptString"
        }
    ]
}
